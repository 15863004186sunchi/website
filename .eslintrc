{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"               : false,
    "__PROD__"              : false,
    "__DEBUG__"             : false,
    "__COVERAGE__"          : false,
    "__BASENAME__"          : false,
    "__PRISMJS_LANGUAGES__" : [],
    "__DATA_PATH__"         : "/data"
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1
  }
}
